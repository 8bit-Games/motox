{
  "name": "xmoto-web",
  "version": "0.6.3",
  "description": "X-Moto Web - WebAssembly port of the physics-based motocross game",
  "private": true,
  "scripts": {
    "build:wasm": "./build.sh Release",
    "build:wasm:debug": "./build.sh Debug",
    "build:wasm:release": "./build.sh Release",
    "build": "npm run build:wasm:release",
    "serve": "http-server public -p 8080 -c-1 --cors",
    "dev": "./build.sh Debug && npm run serve",
    "start": "npm run serve",
    "clean": "./build.sh Debug clean",
    "clean:all": "rm -rf build node_modules public/xmoto-web.* public/*.data",
    "test": "echo 'No tests yet - integration tests coming soon'",
    "lint": "echo 'Linting not yet configured'",
    "format": "echo 'Formatting not yet configured'",
    "check-deps": "which emcc && emcc --version || echo 'Emscripten not found! Run: source /path/to/emsdk/emsdk_env.sh'"
  },
  "keywords": [
    "xmoto",
    "game",
    "webassembly",
    "wasm",
    "emscripten",
    "physics",
    "motocross"
  ],
  "author": "X-Moto Team",
  "license": "GPL-2.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/xmoto/xmoto.git",
    "directory": "web"
  },
  "bugs": {
    "url": "https://github.com/xmoto/xmoto/issues"
  },
  "homepage": "https://xmoto.org",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "http-server": "^14.1.1",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "axios": "^1.6.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
