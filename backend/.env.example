# X-Moto Backend Configuration

# Server
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=xmoto
DB_USER=xmoto
DB_PASSWORD=changeme
DB_SSL=false

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this
JWT_REFRESH_EXPIRES_IN=30d

# OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=

# Storage (S3 compatible)
S3_ENDPOINT=
S3_REGION=us-east-1
S3_BUCKET=xmoto-assets
S3_ACCESS_KEY=
S3_SECRET_KEY=

# CORS
CORS_ORIGIN=http://localhost:8080,https://xmoto.org
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/xmoto.log

# API
API_VERSION=v1
API_PREFIX=/api/v1

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Email (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@xmoto.org
